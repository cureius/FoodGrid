<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="9-increase-payment-method-column-length" author="system">
        <preconditions onFail="MARK_RAN">
            <tableExists tableName="gateway_transactions"/>
            <columnExists tableName="gateway_transactions" columnName="payment_method"/>
        </preconditions>
        
        <modifyDataType
            tableName="gateway_transactions"
            columnName="payment_method"
            newDataType="VARCHAR(100)"/>
            
        <rollback>
            <modifyDataType
                tableName="gateway_transactions"
                columnName="payment_method"
                newDataType="VARCHAR(50)"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
