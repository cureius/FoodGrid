<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
      http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

  <changeSet id="1-create-clients-table" author="dev">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="clients"/>
      </not>
    </preConditions>

    <createTable tableName="clients">
      <column name="id" type="varchar(36)">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="varchar(190)">
        <constraints nullable="false"/>
      </column>
      <column name="contact_email" type="varchar(190)"/>
      <column name="status" type="varchar(32)" defaultValue="ACTIVE"/>
      <column name="created_at" type="datetime"/>
      <column name="updated_at" type="datetime"/>
    </createTable>

    <rollback>
      <dropTable tableName="clients"/>
    </rollback>
  </changeSet>

</databaseChangeLog>
