<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

<changeSet id="14-fix-customer-nullability" author="foodgrid">
    <preConditions onFail="MARK_RAN">
      <tableExists tableName="customers"/>
    </preConditions>
    
    <dropNotNullConstraint tableName="customers" columnName="mobileNumber" columnDataType="VARCHAR(15)"/>
    <dropNotNullConstraint tableName="customers" columnName="email" columnDataType="VARCHAR(255)"/>

    <comment>
      Explicitly remove NOT NULL constraints from mobileNumber and email to support social login.
    </comment>
  </changeSet>

</databaseChangeLog>
